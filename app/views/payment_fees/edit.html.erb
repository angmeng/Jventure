
<% title "Editing payment fee" %>
<br />
<p>

<%= link_to 'Show', @payment_fee %> |
<%= link_to 'Back', payment_fees_path %>
</p>

<% form_for(@payment_fee) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => "60x8" %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  
     <p>
    <%= f.check_box :is_enabled %> <%= f.label :is_enabled %><br />
    
  </p>
   <p>
    <%= f.label :related_column %><br />
    <%= f.select :related_column, Agent.new.attribute_names, :include_blank => true  %>
  </p>
     <p>
    <%= f.label :related_value %><br />
    <%= f.text_field :related_value %>
  </p>
    <em>
    eg : 'is empty', 'not empty', '=something', '!=something', '>100', '<100'
    
  </em>
  
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

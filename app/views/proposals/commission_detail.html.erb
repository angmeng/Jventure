<table>
	<tr>
		<td><%= link_to "Back to Proposal", @proposal %> </td>
	</tr>
</table>
 

<br /><br />
<h4>Proposal</h4>
<table class="list">
  <thead>
    <tr>
    <th>Referer</th>
    <th>Proposal No</th>
    <th>Policy No</th>
    <th>Proposal Name</th>
    <th>Modal Premium</th>
  </tr>
    </thead>

  <tbody>
  <tr>
    <td><%=h @proposal.agent.screen_name %></td>
    <td><%=h @proposal.proposal_number %></td>
    <td><%=h @proposal.policy_number %></td>
    <td><%=h @proposal.fullname %></td>
     <td style="text-align: right"><%=h number_to_currency(@proposal.modal_premium) %></td>
  </tr>
    </tbody>
</table>


<br />
<hr />
<br />
<h4>Commission detail</h4>
<table class="list">
  <thead>
  <tr>
    <th>Date</th>
    <th>Agent</th>
    <th>Level</th>
    <th>Policy Year</th>
    <th>Percentage</th>
    <th>Type</th>
    <th>Amount</th>
  </tr>
   </thead>

  <tbody>
  <% for comm in @commissions %>
  <tr>
    <td style="text-align: center"><%=h comm.date_paid %> </td>
    <td><%=h comm.agent.screen_name %></td>
    <td style="text-align: center"><%=h comm.level_paid %></td>
    <td style="text-align: center"><%=h comm.proposal_year %></td>
    <td style="text-align: center"><%=h comm.percentage %></td>
    <td style="text-align: center"><%= comm.supplementary? ? "Supplementary" : "Plan"  %> </td>
    <td style="text-align: right"><%=h number_to_currency(comm.amount) %></td>
  </tr>
  <% end %>
 </tbody>
</table>

<br />

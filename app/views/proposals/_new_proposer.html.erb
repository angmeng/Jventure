<fieldset>
  <legend>Proposer</legend>
    <p>
    <%= label :proposal, :proposer_is_agent, "Proposer is Agent?" %>&nbsp;
    <%= check_box :proposal, :proposer_is_agent %><br /><br />
  </p>

 <p>
    <%= label :proposal, :proposer_fullname %><br />
    <%= text_field :proposal, :proposer_fullname, :maxlength => 45 %>
  </p>
  <p>
    <%= label :proposal, :proposer_new_ic_number %><br />
    <%= text_field :proposal, :proposer_new_ic_number, :maxlength => 12, :size => 20 %>
  </p>
  <p>
    <%= label :proposal, :proposer_old_ic_number %><br />
    <%= text_field :proposal, :proposer_old_ic_number, :maxlength => 12, :size => 20 %>
  </p>
  <p>
    <%= label :proposal, :proposer_birth_certificate %><br />
    <%= text_field :proposal, :proposer_birth_certificate, :maxlength => 12, :size => 20 %>
  </p>
  <p>
    <%= label :proposal, :proposer_passport %><br />
    <%= text_field :proposal, :proposer_passport, :maxlength => 20, :size => 20 %>
  </p>
  <p>
    <%= label :proposal, :proposer_date_of_birth %><br />
    <%= date_select :proposal, :proposer_date_of_birth, :start_year => 1930, :end_year => Time.now.year %>
  </p>
  <p>
    <% label :proposal, :proposer_age %><br />
    <% text_field :proposal, :proposer_age, :maxlength => 2, :size => 5 %>
  </p>
  <p>
    <%= label :proposal, :proposer_resident_address %><br />
    <%= text_area :proposal, :proposer_resident_address, :size => "60x8" %>
  </p>
  <p>
    <%= label :proposal, :proposer_residence_postcode %><br />
    <%= text_field :proposal, :proposer_residence_postcode, :maxlength => 5 %>
  </p>
  <p>
    <%= label :proposal, :proposer_residence_city %><br />
    <%= text_field :proposal, :proposer_residence_city, :maxlength => 45 %>
  </p>
  <p>
    <%= label :proposal, :proposer_residence_state %><br />
    <%= text_field :proposal, :proposer_residence_state, :maxlength => 45 %>
  </p>
  <p>
    <%= label :proposal, :proposer_residence_phone_number %><br />
    <%= text_field :proposal, :proposer_residence_phone_number, :maxlength => 12, :size => 20 %>
  </p>
  <p>
    <%= label :proposal, :proposer_mobile_number %><br />
    <%= text_field :proposal, :proposer_mobile_number, :maxlength => 12, :size => 20 %>
  </p>

  <p>
    <%= label :proposal, :proposer_relationship %><br />
    <%= text_field :proposal, :proposer_relationship, :maxlength => 45 %>
  </p>

  <p>
    <%= label :proposal, :proposer_email %><br />
    <%= text_field :proposal, :proposer_email, :maxlength => 45 %>
  </p>



</fieldset>

  <br/>
  <hr/>
  <br />

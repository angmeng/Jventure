<% title "Plans" %>
<br />
  <%=  link_to 'New', new_plan_path %> |
 <%= link_to "Back to Menu", :controller => "member_area", :action => "base_setup" %>
<br />
<br />
<table class="list">
  <thead>
  <tr>
    <th>Name</th>
    <th>Sum Assured</th>
    <th>Policy Term</th>
    <th>Premium Term</th>
    <th>Modal Premium</th>
    <th>Action</th>
  </tr>
   </thead>

  <tbody>

  <% for plan in @plans %>
    <tr class="<%= cycle "odd", "even"  %>">
      <td><%=h plan.name %></td>
      <td style="text-align: right"><%=h number_to_currency(plan.sum_assured) %></td>
      <td style="text-align: center"><%=h plan.policy_term %></td>
      <td style="text-align: center"><%=h plan.premium_term %></td>
      <td style="text-align: right"><%=h number_to_currency(plan.modal_premium) %></td>

      <td style="text-align: center"><%= link_to "Show", plan %> |
      <%= link_to "Edit", edit_plan_path(plan) %> |
      <%= link_to "Destroy", plan, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
    </tbody>
</table>


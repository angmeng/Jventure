<% title "New credit" %>
<br /><br />
<%= link_to 'Back', credit_points_path %>
<br /><br />
<% form_for(@credit) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :agent_id %><br />
	<%= f.text_field_with_auto_complete :agent_name, {:size => 50}, { :url => show_agent_proposals_path, :method => :get, :with => "'search='+element.value" } %>
  </p>

  <p>
    <%= f.label :added_credit, "Credit to add" %><br />
    <%= f.text_field :added_credit %>
  </p>
  <br />
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>


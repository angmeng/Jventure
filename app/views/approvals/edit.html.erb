<h1>Editing approval</h1>

<% form_for(@approval) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :approval_date %><br />
    <%= f.date_select :approval_date %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @approval %> |
<%= link_to 'Back', approvals_path %>
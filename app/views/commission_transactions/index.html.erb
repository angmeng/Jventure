<% title "Report" %>

<br /><br />

 <h3>Commission Report</h3>
  <fieldset style="background-color: #EDDA74;">
    <legend>
      </legend>
    <% form_for @search do |f| %>
<table>
  <tr>
    <th>From</th>
    <th>To</th>
    <th>Action</th>
  </tr>

  <tr>
    <td><%= calendar_date_select_tag "from" %> </td>
    <td><%= calendar_date_select_tag "to" %></td>
    <td><%= f.submit "Search"  %> </td>
  </tr>
</table>
<% end %>
  </fieldset>


<br />

<br />
<table class="list">
  <thead>
    <tr>
    <th>Date</th>
    <th>Proposal No</th>
    <th>Policy No</th>
    <th>Proposal name</th>
    <th>Agent</th>
    <th>Level paid</th>
    
    <th>Proposal year</th>
    <th>Percentage</th>
    <th>Amount</th>
  </tr>
</thead>
   <tbody>
    
<% @commission_transactions.each do |commission_transaction| %>
   
   <tr class="<%= cycle "odd", "even"  %> ">
    <td style="text-align: center"><%=h commission_transaction.date_paid %></td>
    <td style="text-align: left"><%=h commission_transaction.proposal.proposal_number %></td>
    <td style="text-align: left"><%=h commission_transaction.proposal.policy_number %></td>
    <td><%=h commission_transaction.proposal.fullname %></td>
    <td><%=h commission_transaction.agent.screen_name %></td>
    <td style="text-align: center"><%=h commission_transaction.level_paid %></td>
    
    <td style="text-align: center"><%=h commission_transaction.proposal_year %></td>
    <td style="text-align: center"><%=h commission_transaction.percentage %></td>
    <td style="text-align: right"><%=h number_to_currency(commission_transaction.amount) %></td>
  </tr>

<% end %>

    </tbody>
</table>

<br />
 <hr />
 <br />
 
  <% if @total %>
   <table style="width:100%">
     <tr>
      <td align="right">
        <b>Grand total</b> : RM <%= number_with_precision(@total, :precision => 2) %>
      </td>
    </tr>
  </table>
<% end %>


 <br /><br />

